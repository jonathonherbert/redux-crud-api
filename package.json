{
  "name": "redux-crud-api",
  "version": "0.1.0",
  "description": "Boilerplate-free CRUD API operations with Redux",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "jam": {
    "main": "./dist/index.browser.js"
  },
  "browser": {
    "dist/index.js": "./dist/index.browser.js"
  },
  "scripts": {
    "build": "webpack || echo not ok",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "coverage": "npm test -- --coverage --no-cache",
    "coverage:watch": "npm run coverage -- --watch",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "prepare": "npm run build && npm test",
    "release": "standard-version && npm pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsherbert/redux-crud-api.git"
  },
  "keywords": [
    "typescript",
    "library",
    "redux",
    "redux-crud",
    "redux-saga"
  ],
  "author": "Jonathon Herbert",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jsherbert/redux-crud-api/issues"
  },
  "homepage": "https://github.com/jsherbert/redux-crud-api#readme",
  "devDependencies": {
    "@types/jest": "^20.0.7",
    "@types/node": "^8.0.24",
    "browserify": "^14.4.0",
    "coveralls": "^3.0.0",
    "delete-empty": "^1.0.1",
    "dts-bundle": "^0.7.3",
    "jest": "^20.0.4",
    "jsdom": "11.6.2",
    "jsdom-global": "3.0.2",
    "standard-version": "^4.2.0",
    "ts-jest": "^20.0.10",
    "ts-loader": "^2.3.3",
    "tslint": "^5.6.0",
    "tslint-loader": "^3.5.3",
    "typescript": "2.4.2",
    "webpack": "3.5.5",
    "webpack-node-externals": "^1.6.0",
    "whatwg-fetch": "^2.0.3"
  },
  "dependencies": {
    "@types/lodash": "^4.14.102",
    "normalizr": "^3.2.4",
    "redux-actions": "^2.2.1",
    "redux-batched-actions": "^0.2.1",
    "redux-crud": "^3.2.0",
    "redux-saga": "^0.16.0",
    "whatwg-fetch": "latest"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "src/.*\\.spec\\.ts$",
      "/node_modules/"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "src/.*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
